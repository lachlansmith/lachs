{
  "name": "lachs",
  "version": "1.0.2",
  "description": "Workspace for exporting JSX to PDF, SVG, PNG and JPEG",
  "repository": "https://github.com/lachlansmith/lachs.git",
  "author": "Lachlan Smith",
  "license": "MIT",
  "scripts": {
    "release:latest": "yarn publish --tag latest && yarn pack",
    "release:next": "yarn publish --tag next",
    "release:prep": "yarn clean && yarn lint && yarn build",
    "lint": "yarn lint:prettier && yarn lint:tslint:src",
    "lint:tslint:src": "tslint --project tsconfig.json --fix",
    "lint:prettier": "prettier --write \"./{src}/**/*.{ts,tsx,js,jsx,json,html,css}\" --loglevel error",
    "build": "yarn build:cjs && yarn build:es && yarn build:esm && yarn build:esm:min && yarn build:umd && yarn build:umd:min",
    "build:cjs": "ttsc --module commonjs --outDir cjs",
    "build:es": "ttsc --module ES2020 --outDir es",
    "build:esm": "rollup --config rollup.config.js --file dist/lachs.esm.js --environment MODULE_TYPE:es",
    "build:esm:min": "rollup --config rollup.config.js --file dist/lachs.esm.min.js --environment MINIFY,MODULE_TYPE:es",
    "build:umd": "rollup --config rollup.config.js --file dist/lachs.js --environment MODULE_TYPE:umd",
    "build:umd:min": "rollup --config rollup.config.js --file dist/lachs.min.js --environment MINIFY,MODULE_TYPE:umd",
    "clean": "rimraf cjs es build"
  },
  "type": "module",
  "main": "cjs/index.js",
  "module": "es/index.js",
  "unpkg": "dist/lachs.min.js",
  "types": "cjs/index.d.ts",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^8.0.1",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.17.1",
    "rollup-plugin-polyfill-node": "^0.10.2",
    "rollup-plugin-terser": "^6.1.0",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "ttypescript": "1.5.10",
    "typescript": "3.9.5"
  },
  "dependencies": {
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "buffer": "^6.0.3",
    "lachs-pdf-lib": "^1.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tslib": "^2.4.0"
  }
}
